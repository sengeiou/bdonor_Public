<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sq.sohel.blooddonor.ui.requestAndResponseForBlood.requestForBlood.requestBloodDialogDetails.RequestBloodDialogViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="30dp"
                android:paddingRight="16dp"
                android:paddingBottom="65dp">

                <ImageView
                    android:id="@+id/bloodGroupImage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ab_negetive"
                    app:bloodGroup="@{viewModel.requestBloodItemViewModel.BloodType}"
                    app:isCharImage="@{`false`}" />

                <TextView
                    android:id="@+id/txtDescription"
                    style="@style/TextStyle.Heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@{viewModel.requestBloodItemViewModel.Description}"
                    tools:text="Description" />



                <TextView
                    android:id="@+id/full_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:text="\nPlease contact to the following persons" />

                <TextView
                    android:id="@+id/contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:text="@{viewModel.requestBloodItemViewModel.ContactPerson1 + ` - `+viewModel.requestBloodItemViewModel.ContactNumber1}"
                    tools:text="ContactPerson1" />

                <TextView
                    android:id="@+id/email_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:text="@{viewModel.requestBloodItemViewModel.ContactPerson2 + ` - `+viewModel.requestBloodItemViewModel.ContactNumber2}"
                    tools:text="ContactPerson2" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txtAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:text="@{viewModel.requestBloodItemViewModel.ContactPerson3 + ` - `+viewModel.requestBloodItemViewModel.ContactNumber3}"
                    tools:text="ContactPerson3" />

                <TextView
                    android:id="@+id/txtComment"
                    style="@style/TextStyle.TitleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:text="@{`\n`+viewModel.requestBloodItemViewModel.Comments}"
                    tools:text="Note" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnOk"
                    style="@style/Button.Action.Negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:onClick="@{() -> viewModel.onOkClick()}"
                    android:text="@string/close" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</layout>